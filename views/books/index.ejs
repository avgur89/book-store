<div class="row">
  <form action="/books" method="GET" class="col-md-8 mx-auto">
    <h2>Search Books</h2>

    <div class="form-row">
      <div class="form-group col">
        <label for="title">Title</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          placeholder="Book title"
          value="<%= searchOptions.title %>"
        />
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="publishedAfter">Publiched After</label>
        <input
          type="date"
          class="form-control"
          id="publishedAfter"
          name="publishedAfter"
          placeholder="mm/dd/yyyy"
          value="<%= searchOptions.publishedAfter %>"
        />
      </div>

      <div class="form-group col-md-6">
        <label for="publishedBefore">Publiched Before</label>
        <input
          type="date"
          class="form-control"
          id="publishedBefore"
          name="publishedBefore"
          placeholder="mm/dd/yyyy"
          value="<%= searchOptions.publishedBefore %>"
        />
      </div>
    </div>

    <button type="submit" class="btn btn-primary mb-2">Search</button>
  </form>
</div>

<div class="container">
  <div class="row">
    <% books.forEach(book => { %>
    <div class="card col-md-4 mr-md-5 mr-xs-0 mb-4 col-xs-12">
      <img
        class="card-img-top w-50 mx-auto"
        src="<%= book.coverImagePath %>"
        alt="<%= book.title %>"
      />
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <p class="card-text"><%= book.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Cras justo odio</li>
        <li class="list-group-item">Dapibus ac facilisis in</li>
        <li class="list-group-item">Vestibulum at eros</li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>
    <% }) %>
  </div>
</div>
